        },
        {
            "name": "Patrick van Kouteren",
            "email": "info@wedesignit.nl"
        },
        {
            "name": "Gawain Lynch",
            "email": "gawain.lynch@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
